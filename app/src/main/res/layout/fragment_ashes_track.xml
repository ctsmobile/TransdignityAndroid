<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.servicesTrackStatusFragments.AshesTrackFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".fragments.TrackFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <TextView
                    android:id="@+id/tv_back"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:background="@drawable/ic_chevron_left_black_24dp"
                    android:foreground="?attr/selectableItemBackgroundBorderless" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Ashes Track"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold" />
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:background="@color/white"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="@dimen/_7sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/_30sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingRight="@dimen/_10sdp">

                            <TextView
                                android:id="@+id/tv_decendent_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/_14sdp" />

                            <TextView
                                android:id="@+id/tv_status_running"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_green_30corn"
                                android:paddingLeft="@dimen/_10sdp"
                                android:paddingTop="@dimen/_5sdp"
                                android:paddingRight="@dimen/_10sdp"
                                android:paddingBottom="@dimen/_5sdp"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold"
                                android:visibility="gone" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingRight="@dimen/_10sdp">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <View
                                    android:layout_width="@dimen/_10sdp"
                                    android:layout_height="@dimen/_10sdp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/circle_fill"
                                    android:backgroundTint="@color/black" />

                                <LinearLayout
                                    android:layout_width="@dimen/_10sdp"
                                    android:layout_height="@dimen/_60sdp"
                                    android:layout_gravity="center"
                                    android:orientation="vertical">

                                    <View
                                        android:layout_width="@dimen/_4sdp"
                                        android:layout_height="@dimen/_4sdp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:background="@drawable/circle_fill"
                                        android:backgroundTint="@color/grey" />

                                    <View
                                        android:layout_width="@dimen/_4sdp"
                                        android:layout_height="@dimen/_4sdp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:background="@drawable/circle_fill"
                                        android:backgroundTint="@color/grey" />

                                    <View
                                        android:layout_width="@dimen/_4sdp"
                                        android:layout_height="@dimen/_4sdp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:background="@drawable/circle_fill"
                                        android:backgroundTint="@color/grey" />

                                    <View
                                        android:layout_width="@dimen/_4sdp"
                                        android:layout_height="@dimen/_4sdp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:background="@drawable/circle_fill"
                                        android:backgroundTint="@color/grey" />

                                    <View
                                        android:layout_width="@dimen/_4sdp"
                                        android:layout_height="@dimen/_4sdp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:background="@drawable/circle_fill"
                                        android:backgroundTint="@color/grey" />

                                    <View
                                        android:layout_width="@dimen/_4sdp"
                                        android:layout_height="@dimen/_4sdp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:background="@drawable/circle_fill"
                                        android:backgroundTint="@color/grey" />

                                </LinearLayout>

                                <View
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:background="@drawable/ic_place_black_24dp"
                                    android:backgroundTint="@color/black" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/removed_from"
                                        android:textColor="@color/dark_grey"
                                        android:textSize="@dimen/_10sdp" />

                                    <TextView
                                        android:id="@+id/tv_pickup_location"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_10sdp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_30sdp"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/transfered_to"
                                            android:textColor="@color/dark_grey"
                                            android:textSize="@dimen/_10sdp" />

                                        <TextView
                                            android:id="@+id/tv_drop_location"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text=""
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_10sdp" />
                                    </LinearLayout>
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:background="@color/light_grey" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <View
                                android:visibility="gone"
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_56sdp"
                                android:background="@color/colorPrimaryDark" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    >
                                    <ImageView
                                        android:layout_marginLeft="@dimen/_50sdp"
                                        android:id="@+id/iv_requested_accepted"
                                        android:layout_width="@dimen/_14sdp"
                                        android:layout_height="@dimen/_14sdp"
                                        android:src="@drawable/circle_border_primary"
                                        />
                                    <View
                                        android:layout_width="@dimen/_1sdp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/_56sdp"
                                        android:background="@color/colorPrimaryDark" />

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Request Accepted"
                                        android:textSize="@dimen/_10sdp"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        />
                                    <TextView
                                        android:id="@+id/tv_requested_accepted"
                                        android:layout_width="@dimen/_50sdp"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:text=""
                                        android:textSize="@dimen/_10sdp" />

                                </LinearLayout>

                            </LinearLayout>
                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginLeft="@dimen/_56sdp"
                                android:background="@color/colorPrimaryDark" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    >
                                    <ImageView
                                        android:layout_marginLeft="@dimen/_50sdp"
                                        android:id="@+id/iv_removal_specialist_assign"
                                        android:layout_width="@dimen/_14sdp"
                                        android:layout_height="@dimen/_14sdp"
                                        android:src="@drawable/circle_border_primary"
                                        />
                                    <View
                                        android:layout_width="@dimen/_1sdp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/_56sdp"
                                        android:background="@color/colorPrimaryDark" />

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Removal Specialist Assign"
                                        android:textSize="@dimen/_10sdp"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        />
                                    <TextView
                                        android:id="@+id/tv_removal_specialist_assign"
                                        android:layout_width="@dimen/_50sdp"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:text=""
                                        android:textSize="@dimen/_10sdp" />

                                </LinearLayout>

                            </LinearLayout>
                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginLeft="@dimen/_56sdp"
                                android:background="@color/colorPrimaryDark" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    >
                                    <ImageView
                                        android:layout_marginLeft="@dimen/_50sdp"
                                        android:id="@+id/iv_Driver_assign"
                                        android:layout_width="@dimen/_14sdp"
                                        android:layout_height="@dimen/_14sdp"
                                        android:src="@drawable/circle_border_primary"
                                        />
                                    <View
                                        android:layout_width="@dimen/_1sdp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/_56sdp"
                                        android:background="@color/colorPrimaryDark" />

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Driver Assign"
                                        android:textSize="@dimen/_10sdp"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        />
                                    <TextView
                                        android:id="@+id/tv_Driver_assign"
                                        android:layout_width="@dimen/_50sdp"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:text=""
                                        android:textSize="@dimen/_10sdp" />

                                </LinearLayout>

                            </LinearLayout>
                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginLeft="@dimen/_56sdp"
                                android:background="@color/colorPrimaryDark" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    >
                                    <ImageView
                                        android:layout_marginLeft="@dimen/_50sdp"
                                        android:id="@+id/iv_reached_on_pickup_location"
                                        android:layout_width="@dimen/_14sdp"
                                        android:layout_height="@dimen/_14sdp"
                                        android:src="@drawable/circle_border_primary"
                                        />
                                    <View
                                        android:layout_width="@dimen/_1sdp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/_56sdp"
                                        android:background="@color/colorPrimaryDark" />

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Reached On Pickup Location"
                                        android:textSize="@dimen/_10sdp"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        />
                                    <TextView
                                        android:id="@+id/tv_reached_on_pickup_location"
                                        android:layout_width="@dimen/_50sdp"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:gravity="center"
                                        android:textSize="@dimen/_10sdp"
                                        />

                                </LinearLayout>
                            </LinearLayout>
                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginLeft="@dimen/_56sdp"
                                android:background="@color/colorPrimaryDark" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    >
                                    <ImageView
                                        android:layout_marginLeft="@dimen/_50sdp"
                                        android:id="@+id/iv_ashes_pickup"
                                        android:layout_width="@dimen/_14sdp"
                                        android:layout_height="@dimen/_14sdp"
                                        android:src="@drawable/circle_border_primary"
                                        />
                                    <View
                                        android:layout_width="@dimen/_1sdp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/_56sdp"
                                        android:background="@color/colorPrimaryDark" />

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Ashes Pickup "
                                        android:textSize="@dimen/_10sdp"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        />
                                    <TextView
                                        android:id="@+id/tv_ashes_pickup"
                                        android:layout_width="@dimen/_50sdp"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:gravity="center"
                                        android:textSize="@dimen/_10sdp"
                                        />

                                </LinearLayout>
                            </LinearLayout>
                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginLeft="@dimen/_56sdp"
                                android:background="@color/colorPrimaryDark" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    >
                                    <ImageView
                                        android:layout_marginLeft="@dimen/_50sdp"
                                        android:id="@+id/iv_reached_on_drop_location"
                                        android:layout_width="@dimen/_14sdp"
                                        android:layout_height="@dimen/_14sdp"
                                        android:src="@drawable/circle_border_primary"
                                        />
                                    <View
                                        android:layout_width="@dimen/_1sdp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/_56sdp"
                                        android:background="@color/colorPrimaryDark" />

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Reached On Drop Location"
                                        android:textSize="@dimen/_10sdp"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        />
                                    <TextView
                                        android:id="@+id/tv_reached_on_drop_location"
                                        android:layout_width="@dimen/_50sdp"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:gravity="center"
                                        android:textSize="@dimen/_10sdp"
                                        />

                                </LinearLayout>

                            </LinearLayout>
                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginLeft="@dimen/_56sdp"
                                android:background="@color/colorPrimaryDark" />
                            <LinearLayout
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/tv_reached_on_decendent_pickup_location_time"
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:gravity="center"
                                    android:textSize="@dimen/_10sdp"
                                    />
                                <ImageView
                                    android:id="@+id/iv_reached_on_decendent_pickup_location_active"
                                    android:layout_width="@dimen/_14sdp"
                                    android:layout_height="@dimen/_14sdp"
                                    android:src="@drawable/circle_border_primary"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Reached on Decendent pickup Location"
                                    android:textSize="@dimen/_10sdp"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    />

                            </LinearLayout>
                            <View
                                android:visibility="gone"
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginLeft="@dimen/_56sdp"
                                android:background="@color/colorPrimaryDark" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    >
                                    <ImageView
                                        android:layout_marginLeft="@dimen/_50sdp"
                                        android:id="@+id/iv_ashes_drop_location_active"
                                        android:layout_width="@dimen/_14sdp"
                                        android:layout_height="@dimen/_14sdp"
                                        android:src="@drawable/circle_border_primary"
                                        />


                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Ashes Droped On Drop Location"
                                        android:textSize="@dimen/_10sdp"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        />
                                    <TextView
                                        android:id="@+id/tv_ashes_drop_location_active"
                                        android:layout_width="@dimen/_50sdp"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:gravity="center"
                                        android:textSize="@dimen/_10sdp"
                                        />

                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>


</LinearLayout>