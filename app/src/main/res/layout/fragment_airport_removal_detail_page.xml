<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.DetailFormPage.AshesViewDetialPageFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <TextView
                android:id="@+id/tv_back"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:background="@drawable/ic_chevron_left_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Airport HR arrival/Departure View Details "
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_date"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:text="date"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                ></TextView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@color/white"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Requested By"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_5sdp"
                        ></TextView>
                    <TextView

                        android:id="@+id/tv_requested_by"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Noida sector 63"
                        android:textSize="@dimen/_9ssp"
                        android:layout_marginTop="@dimen/_3sdp"
                        ></TextView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date of Request"
                                android:textSize="@dimen/_10ssp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_marginTop="@dimen/_5sdp"
                                ></TextView>
                            <TextView
                                android:id="@+id/tv_date_of_request"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Noida sector 63"
                                android:textSize="@dimen/_9ssp"
                                android:layout_marginTop="@dimen/_3sdp"
                                ></TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Requester Contact Number"
                                android:textSize="@dimen/_10ssp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_marginTop="@dimen/_5sdp"
                                ></TextView>
                            <TextView
                                android:id="@+id/tv_requester_contact_no"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Noida sector 63"
                                android:textSize="@dimen/_9ssp"
                                android:layout_marginTop="@dimen/_3sdp"
                                ></TextView>
                        </LinearLayout>

                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Descendant Name"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_5sdp"
                        ></TextView>
                    <TextView
                        android:id="@+id/tv_descendant_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Noida sector 63"
                        android:textSize="@dimen/_9ssp"
                        android:layout_marginTop="@dimen/_3sdp"
                        ></TextView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date of Birth"
                                android:textSize="@dimen/_10ssp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_marginTop="@dimen/_5sdp"
                                ></TextView>
                            <TextView
                                android:id="@+id/tv_date_of_birth"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Noida sector 63"
                                android:textSize="@dimen/_9ssp"
                                android:layout_marginTop="@dimen/_3sdp"
                                ></TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date &amp; Time of Death"
                                android:textSize="@dimen/_10ssp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_marginTop="@dimen/_5sdp"
                                ></TextView>
                            <TextView
                                android:id="@+id/tv_date_time_of_death"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Noida sector 63"
                                android:textSize="@dimen/_9ssp"
                                android:layout_marginTop="@dimen/_3sdp"
                                ></TextView>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Place of Death"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/_5sdp"
                            ></TextView>
                        <TextView
                            android:id="@+id/tv_place_of_death"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Noida sector 63"
                            android:textSize="@dimen/_9ssp"
                            android:layout_marginTop="@dimen/_3sdp"
                            ></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Descendent Mobile No"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/_5sdp"
                            ></TextView>
                        <TextView
                            android:id="@+id/tv_descendant_mobile_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Noida sector 63"
                            android:textSize="@dimen/_9ssp"
                            android:layout_marginTop="@dimen/_3sdp"
                            ></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estimate Date Of Arrival"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/_5sdp"
                            ></TextView>
                        <TextView
                            android:id="@+id/tv_estimate_date_of_arrival"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Noida sector 63"
                            android:textSize="@dimen/_9ssp"
                            android:layout_marginTop="@dimen/_3sdp"
                            ></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Transferred Address"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/_5sdp"
                            ></TextView>
                        <TextView
                            android:id="@+id/tv_transferred_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Noida sector 63"
                            android:textSize="@dimen/_9ssp"
                            android:layout_marginTop="@dimen/_3sdp"
                            ></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Descendent Address To Be Picked From"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/_5sdp"
                            ></TextView>
                        <TextView
                            android:id="@+id/tv_descendant_address_to_be_picked_from"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Noida sector 63"
                            android:textSize="@dimen/_9ssp"
                            android:layout_marginTop="@dimen/_3sdp"
                            ></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Flight From"
                                android:textSize="@dimen/_10ssp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_marginTop="@dimen/_5sdp"
                                ></TextView>
                            <TextView
                                android:id="@+id/tv_flight_from"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Noida sector 63"
                                android:textSize="@dimen/_9ssp"
                                android:layout_marginTop="@dimen/_3sdp"
                                ></TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Flight To"
                                android:textSize="@dimen/_10ssp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_marginTop="@dimen/_5sdp"
                                ></TextView>
                            <TextView
                                android:id="@+id/tv_flight_to"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Noida sector 63"
                                android:textSize="@dimen/_9ssp"
                                android:layout_marginTop="@dimen/_3sdp"
                                ></TextView>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date Of Journey"
                                android:textSize="@dimen/_10ssp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_marginTop="@dimen/_5sdp"
                                ></TextView>
                            <TextView
                                android:id="@+id/tv_date_journey"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Noida sector 63"
                                android:textSize="@dimen/_9ssp"
                                android:layout_marginTop="@dimen/_3sdp"
                                ></TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date Of Departure"
                                android:textSize="@dimen/_10ssp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_marginTop="@dimen/_5sdp"
                                ></TextView>
                            <TextView
                                android:id="@+id/tv_date_of_departure"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Noida sector 63"
                                android:textSize="@dimen/_9ssp"
                                android:layout_marginTop="@dimen/_3sdp"
                                ></TextView>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Time Of Arrival"
                                android:textSize="@dimen/_10ssp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_marginTop="@dimen/_5sdp"
                                ></TextView>

                            <TextView
                                android:id="@+id/tv_time_of_arrival"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:text="Noida sector 63"
                                android:textSize="@dimen/_9ssp"></TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Flight Name"
                                android:textSize="@dimen/_10ssp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_marginTop="@dimen/_5sdp"
                                ></TextView>
                            <TextView
                                android:id="@+id/tv_flight_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Noida sector 63"
                                android:textSize="@dimen/_9ssp"
                                android:layout_marginTop="@dimen/_3sdp"
                                ></TextView>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Flight No."
                                android:textSize="@dimen/_10ssp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_marginTop="@dimen/_5sdp"
                                ></TextView>
                            <TextView
                                android:id="@+id/tv_flight_no"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Noida sector 63"
                                android:textSize="@dimen/_9ssp"
                                android:layout_marginTop="@dimen/_3sdp"
                                ></TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="PRN No."
                                android:textSize="@dimen/_10ssp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_marginTop="@dimen/_5sdp"
                                ></TextView>
                            <TextView
                                android:id="@+id/tv_prn_no"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Noida sector 63"
                                android:textSize="@dimen/_9ssp"
                                android:layout_marginTop="@dimen/_3sdp"
                                ></TextView>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </ScrollView>
