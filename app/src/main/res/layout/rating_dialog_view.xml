<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_10sdp"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_20sdp"
        >
        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_150sdp"
            android:src="@drawable/star2x"
            android:layout_gravity="center_horizontal"
            ></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Valuable Feedback Matters To Us"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_10ssp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10ssp"
            android:text="We work super hard to make transdignity"
            android:textSize="@dimen/_8ssp"
            android:layout_gravity="center_horizontal"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="for you, and would lave to know"
            android:textSize="@dimen/_8ssp"
            android:layout_gravity="center_horizontal"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How would you rate our service"
            android:textSize="@dimen/_8ssp"
            android:layout_gravity="center_horizontal"
            ></TextView>
        <RatingBar
            android:id="@+id/ratingBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/RatingBar"
            android:numStars="5"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_20ssp"
            android:rating="5.4"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/show_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/_8ssp"
            android:layout_gravity="center_horizontal"
            ></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginRight="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_10ssp"
            android:background="@drawable/edittext_background_shape"
            >
            <EditText
                android:id="@+id/ed_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_9ssp"
                android:layout_margin="@dimen/_5sdp"
                android:hint="comments"
                ></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/_20sdp"
            >
            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_25sdp"
                android:background="@drawable/button_shape"
                android:textSize="@dimen/_9sdp"
                android:text="Submit"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:gravity="center"
                ></TextView>
        </LinearLayout>
    </LinearLayout>



</androidx.cardview.widget.CardView>