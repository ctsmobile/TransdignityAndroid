<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.DetailFormPage.DescendantViewDetailPageFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <TextView
                android:id="@+id/tv_back"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:background="@drawable/ic_chevron_left_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Descendent View Detail"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_date"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:text="date"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                ></TextView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@color/white"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Requested By"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_5sdp"
                        ></TextView>
                    <TextView
                        android:id="@+id/tv_request_by"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Noida sector 63"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginTop="@dimen/_3sdp"
                        ></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pickup Location"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_5sdp"
                        ></TextView>
                    <TextView
                        android:id="@+id/tv_pickup_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Noida sector 63"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginTop="@dimen/_3sdp"
                        ></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Drop Location"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_5sdp"
                        ></TextView>
                    <TextView
                        android:id="@+id/tv_drop_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delhi"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginTop="@dimen/_3sdp"
                        ></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Descendent Name"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_5sdp"
                        ></TextView>
                    <TextView
                        android:id="@+id/tv_descendent_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delhi"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginTop="@dimen/_3sdp"
                        ></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bill to"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_5sdp"
                        ></TextView>
                    <TextView
                        android:id="@+id/tv_bill_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 mils"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginTop="@dimen/_3sdp"
                        ></TextView>
                    <TextView
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Requested By"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_5sdp"
                        ></TextView>
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_requested_by"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Round Trip"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginTop="@dimen/_3sdp"
                        ></TextView>
                    <TextView
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name of Deceased"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_5sdp"
                        ></TextView>
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_name_deceased"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="raju"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginTop="@dimen/_3sdp"
                        ></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Removed From Address"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_5sdp"
                        ></TextView>
                    <TextView
                        android:id="@+id/tv_removed_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Noida "
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginTop="@dimen/_3sdp"
                        ></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transferred to Address"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_5sdp"
                        ></TextView>
                    <TextView
                        android:id="@+id/tv_transfer_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Noida "
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginTop="@dimen/_3sdp"
                        ></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time of Death"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_5sdp"
                        ></TextView>
                    <TextView
                        android:id="@+id/tv_time_of_death"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Noida "
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginTop="@dimen/_3sdp"
                        ></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Type of hospital"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_5sdp"
                        ></TextView>
                    <TextView
                        android:id="@+id/tv_type_of_hospital"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Noida "
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginTop="@dimen/_3sdp"
                        ></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Completion time"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_5sdp"
                        ></TextView>
                    <TextView
                        android:id="@+id/tv_completion_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Noida "
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginTop="@dimen/_3sdp"
                        ></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Physician phone no."
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_5sdp"
                        ></TextView>
                    <TextView
                        android:id="@+id/tv_physician_phone_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Noida "
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginTop="@dimen/_3sdp"
                        ></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Extra Items"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_5sdp"
                        ></TextView>
                    <TextView
                        android:id="@+id/tv_extra_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Noida "
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginTop="@dimen/_3sdp"
                        ></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Personal Effect"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_5sdp"
                        ></TextView>
                    <TextView
                        android:id="@+id/tv_personal_effect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Noida "
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginTop="@dimen/_3sdp"
                        ></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Body Release"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_5sdp"
                        ></TextView>
                    <TextView
                        android:id="@+id/tv_body_release"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Noida "
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginTop="@dimen/_3sdp"
                        ></TextView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>


</LinearLayout>