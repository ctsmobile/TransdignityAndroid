<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.ShowVehicleDetailsFragment">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="@dimen/_10sdp"
       >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"

           >
           <TextView
               android:id="@+id/tv_vehicle_type"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Cab Name."
               android:textSize="@dimen/_12sdp"
               android:textColor="@color/black"
               ></TextView>
           <TextView
               android:layout_marginTop="@dimen/_5sdp"
               android:visibility="gone"
               android:id="@+id/tv_owner"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Cab Name."
               android:textSize="@dimen/_12sdp"
               android:textColor="@color/black"
               ></TextView>
           <TextView
               android:layout_marginTop="@dimen/_5sdp"

               android:visibility="gone"
               android:id="@+id/tv_caption"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Cab Name."
               android:textSize="@dimen/_12sdp"
               android:textColor="@color/black"
               ></TextView>
           <TextView
               android:layout_marginTop="@dimen/_5sdp"

               android:visibility="gone"
               android:id="@+id/tv_location"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Cab Name."
               android:textSize="@dimen/_12sdp"
               android:textColor="@color/black"
               ></TextView>
           <TextView
               android:layout_marginTop="@dimen/_5sdp"

               android:id="@+id/tv_cab_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Cab Name."
               android:textSize="@dimen/_12sdp"
               android:textColor="@color/black"
               ></TextView>
           <TextView

               android:id="@+id/tv_cab_number"
               android:layout_marginTop="@dimen/_5sdp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Cab Number"
               android:textSize="@dimen/_12sdp"
               android:textColor="@color/black"
               ></TextView>
           <TextView
               android:id="@+id/tv_registration_no"
               android:layout_marginTop="@dimen/_5sdp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Registration Number"
               android:textSize="@dimen/_12sdp"
               android:textColor="@color/black"
               ></TextView>
           <TextView
               android:visibility="gone"
               android:id="@+id/tv_insurance_no"
               android:layout_marginTop="@dimen/_5sdp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Insurance Number"
               android:textSize="@dimen/_12sdp"
               android:textColor="@color/black"
               ></TextView>
           <LinearLayout
               android:id="@+id/im_1"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:gravity="center_vertical"
               android:layout_marginTop="@dimen/_10sdp"
               >
               <TextView
                   android:id="@+id/tv_pollution_doc"
                   android:layout_weight="2"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="Pollution Document"
                   android:textSize="@dimen/_12sdp"
                   android:textColor="@color/black"
                   android:gravity="center_vertical"
                   android:layout_gravity="center_vertical"
                   ></TextView>
               <TextView
                   android:layout_weight="1"
                   android:id="@+id/btn_reg_view1"
                   android:layout_width="0dp"
                   android:layout_height="@dimen/_25sdp"
                   android:background="@drawable/button_shape"
                   android:textSize="@dimen/_9sdp"
                   android:text="View"
                   android:textColor="@color/black"
                   android:gravity="center"
                   android:layout_marginRight="@dimen/_20sdp"
                   android:layout_gravity="center_vertical"
                   android:layout_marginLeft="@dimen/_20sdp"

                   ></TextView>
           </LinearLayout>
           <LinearLayout
               android:id="@+id/im_2"

               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:gravity="center_vertical"
               android:layout_marginTop="@dimen/_10sdp"
               >
               <TextView
                   android:id="@+id/tv_registration_doc"
                   android:layout_weight="2"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="Registration Document"
                   android:textSize="@dimen/_12sdp"
                   android:textColor="@color/black"
                   android:gravity="center_vertical"
                   android:layout_gravity="center_vertical"
                   ></TextView>
               <TextView
                   android:layout_weight="1"
                   android:id="@+id/btn_reg_view2"
                   android:layout_width="0dp"
                   android:layout_height="@dimen/_25sdp"
                   android:background="@drawable/button_shape"
                   android:textSize="@dimen/_9sdp"
                   android:text="View"
                   android:textColor="@color/black"
                   android:gravity="center"
                   android:layout_marginRight="@dimen/_20sdp"
                   android:layout_gravity="center_vertical"
                   android:layout_marginLeft="@dimen/_20sdp"

                   ></TextView>
           </LinearLayout>
           <LinearLayout
               android:id="@+id/im_3"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:gravity="center_vertical"
               android:layout_marginTop="@dimen/_10sdp"
               >
               <TextView
                   android:id="@+id/tv_brsa_doc"
                   android:layout_weight="2"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="BASR Document"
                   android:textSize="@dimen/_12sdp"
                   android:textColor="@color/black"
                   android:gravity="center_vertical"
                   android:layout_gravity="center_vertical"
                   ></TextView>
               <TextView
                   android:layout_weight="1"
                   android:id="@+id/btn_brsa"
                   android:layout_width="0dp"
                   android:layout_height="@dimen/_25sdp"
                   android:background="@drawable/button_shape"
                   android:textSize="@dimen/_9sdp"
                   android:text="View"
                   android:textColor="@color/black"
                   android:gravity="center"
                   android:layout_marginRight="@dimen/_20sdp"
                   android:layout_gravity="center_vertical"
                   android:layout_marginLeft="@dimen/_20sdp"

                   ></TextView>
           </LinearLayout>
           <TextView
               android:id="@+id/btn_update"
               android:layout_width="@dimen/_100sdp"
               android:layout_height="@dimen/_25sdp"
               android:background="@drawable/button_shape"
               android:textSize="@dimen/_9sdp"
               android:text="Update"
               android:textColor="@color/black"
               android:gravity="center"
               android:layout_gravity="center_horizontal"
               android:layout_marginTop="@dimen/_50sdp"
               ></TextView>

       </LinearLayout>

   </ScrollView>

</LinearLayout>