<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.DetailFormPage.BurialAtSeaDetailPageFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <TextView
                android:id="@+id/tv_back"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:background="@drawable/ic_chevron_left_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Burial At Sea Details"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           >
           <TextView
               android:id="@+id/tv_date"
               android:gravity="end"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textColor="@color/black"
               android:textSize="@dimen/_11sdp"
               android:text="date"
               android:layout_marginRight="@dimen/_20sdp"
               android:layout_marginTop="@dimen/_20sdp"
               ></TextView>
           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/_10sdp"
               android:layout_marginRight="@dimen/_10sdp"
               android:layout_marginLeft="@dimen/_10sdp"
               android:background="@color/white">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_marginTop="@dimen/_10sdp"
                   android:layout_marginLeft="@dimen/_10sdp"
                   android:layout_marginRight="@dimen/_10sdp"
                   android:layout_marginBottom="@dimen/_10sdp"
                   >
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Request Detail"
                       android:textSize="@dimen/_13ssp"
                       android:textColor="@color/black"
                       android:textStyle="bold"
                       android:layout_marginTop="@dimen/_5sdp"
                       ></TextView>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Request By"
                       android:textSize="@dimen/_10ssp"
                       android:textColor="@color/black"
                       android:textStyle="bold"
                       android:layout_marginTop="@dimen/_10sdp"
                       ></TextView>
                   <TextView

                       android:id="@+id/tv_request_by"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Noida sector 63"
                       android:textSize="@dimen/_9ssp"
                       android:layout_marginTop="@dimen/_3sdp"
                       ></TextView>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       >
                       <LinearLayout
                           android:layout_weight="1"
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:orientation="vertical"
                           >
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="Date Of Request"
                               android:textSize="@dimen/_10ssp"
                               android:textColor="@color/black"
                               android:textStyle="bold"
                               android:layout_marginTop="@dimen/_5sdp"
                               ></TextView>
                           <TextView
                               android:id="@+id/tv_date_of_request"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="Noida sector 63"
                               android:textSize="@dimen/_9ssp"
                               android:layout_marginTop="@dimen/_3sdp"
                               ></TextView>
                       </LinearLayout>
                       <LinearLayout
                           android:layout_weight="1"
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:orientation="vertical"
                           >
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="Requester Contact No"
                               android:textSize="@dimen/_10ssp"
                               android:textColor="@color/black"
                               android:textStyle="bold"
                               android:layout_marginTop="@dimen/_5sdp"
                               ></TextView>
                           <TextView
                               android:id="@+id/tv_requester_contact_no"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="Noida sector 63"
                               android:textSize="@dimen/_9ssp"
                               android:layout_marginTop="@dimen/_3sdp"
                               ></TextView>
                       </LinearLayout>

                   </LinearLayout>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Descendent Detail"
                       android:textSize="@dimen/_13ssp"
                       android:textColor="@color/black"
                       android:textStyle="bold"
                       android:layout_marginTop="@dimen/_10sdp"
                       ></TextView>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       >
                       <LinearLayout
                           android:layout_weight="1"
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:orientation="vertical"
                           >
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="Name"
                               android:textSize="@dimen/_10ssp"
                               android:textColor="@color/black"
                               android:textStyle="bold"
                               android:layout_marginTop="@dimen/_5sdp"
                               ></TextView>
                           <TextView
                               android:id="@+id/tv_name"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="Noida sector 63"
                               android:textSize="@dimen/_9ssp"
                               android:layout_marginTop="@dimen/_3sdp"
                               ></TextView>
                       </LinearLayout>
                       <LinearLayout
                           android:layout_weight="1"
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:orientation="vertical"
                           >
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="Date Of Birth"
                               android:textSize="@dimen/_10ssp"
                               android:textColor="@color/black"
                               android:textStyle="bold"
                               android:layout_marginTop="@dimen/_5sdp"
                               ></TextView>
                           <TextView
                               android:id="@+id/tv_date_of_birth"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="Noida sector 63"
                               android:textSize="@dimen/_9ssp"
                               android:layout_marginTop="@dimen/_3sdp"
                               ></TextView>
                       </LinearLayout>

                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       >
                       <LinearLayout
                           android:layout_weight="1"
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:orientation="vertical"
                           >
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="Place Of Death"
                               android:textSize="@dimen/_10ssp"
                               android:textColor="@color/black"
                               android:textStyle="bold"
                               android:layout_marginTop="@dimen/_5sdp"
                               ></TextView>
                           <TextView
                               android:id="@+id/tv_place_of_death"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="Noida sector 63"
                               android:textSize="@dimen/_9ssp"
                               android:layout_marginTop="@dimen/_3sdp"
                               ></TextView>
                       </LinearLayout>
                       <LinearLayout
                           android:layout_weight="1"
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:orientation="vertical"
                           >
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="Time Of Death"
                               android:textSize="@dimen/_10ssp"
                               android:textColor="@color/black"
                               android:textStyle="bold"
                               android:layout_marginTop="@dimen/_5sdp"
                               ></TextView>
                           <TextView
                               android:id="@+id/tv_time_of_death"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="Noida sector 63"
                               android:textSize="@dimen/_9ssp"
                               android:layout_marginTop="@dimen/_3sdp"
                               ></TextView>
                       </LinearLayout>

                   </LinearLayout>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Transfer Details"
                       android:textSize="@dimen/_13ssp"
                       android:textColor="@color/black"
                       android:textStyle="bold"
                       android:layout_marginTop="@dimen/_10sdp"
                       ></TextView>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Estimated Date For Arrival Of Descendent Body"
                       android:textSize="@dimen/_10ssp"
                       android:textColor="@color/black"
                       android:textStyle="bold"
                       android:layout_marginTop="@dimen/_10sdp"
                       ></TextView>
                   <TextView

                       android:id="@+id/tv_estimated_date"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Noida sector 63"
                       android:textSize="@dimen/_9ssp"
                       android:layout_marginTop="@dimen/_3sdp"
                       ></TextView>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Transferred Address"
                       android:textSize="@dimen/_10ssp"
                       android:textColor="@color/black"
                       android:textStyle="bold"
                       android:layout_marginTop="@dimen/_10sdp"
                       ></TextView>
                   <TextView

                       android:id="@+id/tv_transferred_address"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Noida sector 63"
                       android:textSize="@dimen/_9ssp"
                       android:layout_marginTop="@dimen/_3sdp"
                       ></TextView>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Descendent Body Address To Be Picked From"
                       android:textSize="@dimen/_10ssp"
                       android:textColor="@color/black"
                       android:textStyle="bold"
                       android:layout_marginTop="@dimen/_10sdp"
                       ></TextView>
                   <TextView

                       android:id="@+id/tv_Descendant_Pick_address"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Noida sector 63"
                       android:textSize="@dimen/_9ssp"
                       android:layout_marginTop="@dimen/_3sdp"
                       ></TextView>

               </LinearLayout>
           </androidx.cardview.widget.CardView>
       </LinearLayout>
   </ScrollView>

</LinearLayout>